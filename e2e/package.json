{
  "name": "e2e",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:get_tasks": "npm run test -- -t 'get tasks'",
    "test:add_todo": "npm run test -- -t 'add todo'",
    "test:done_todo": "npm run test -- -t 'done todo'",
    "test:clear_all_done_tasks": "npm run test -- -t 'clear all done tasks'",
    "test:welcome_message": "npm run test -- -t 'welcome message'",
    "lint:check": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jest-environment-puppeteer": "^5.0.6",
    "jest": "^29.7.0",
    "jest-dev-server": "^10.0.0",
    "jest-puppeteer": "^10.0.1",
    "puppeteer": "^22.12.1",
    "ts-jest": "^29.1.5"
  }
}
